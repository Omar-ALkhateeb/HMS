<%- include('../partials/admin/header') %>
<section id="appointment" data-stellar-background-ratio="3">
  <div class="container">
      <div class="row">
          <div class="col-md-10 col-md-offset-1">
              <div class="panel panel-default panel-table">

                <div class="panel-heading">
                  <div class="row">
                    <div class="col col-xs-6">
                      <h3 class="panel-title">Showing All Doctors:</h3>
                    </div>
                    <div class="col col-xs-6 text-right">
                      <a href="/admin/addnewdoctor">
                        <button type="button" class="btn btn-sm btn-primary btn-create">Add New Dcctor</button>
                      </a>
                    </div>
                  </div>
                </div>

                <div class="panel-body">
                  <table class="table table-striped table-bordered table-list">
                    <thead>
                      <tr>
                          <th><em class="fa fa-cog"></em></th>
                          <th>Specialization</th>
                          <th>Name</th>
                          <th>Email</th>
                      </tr> 
                    </thead>
                    <tbody>
                      <% doctors.forEach(doctor => {%>
                        <tr>
                          <td align="center">
                            <a href="/admin/editdoctor/<%=doctor.DOCTOR_ID%>">
                              <button type="button" class="btn btn-default">
                                <em class="fa fa-pencil"></em>
                              </button>
                            </a>
                            <a href="/admin/deletedoctor/<%=doctor.DOCTOR_ID%>">
                              <button type="button" class="btn btn-danger">
                                <em class="fa fa-trash"></em>
                              </button>
                            </a>
                          </td>
                          <td><%=doctor.SPECIALIZATION%></td>
                          <td><%=doctor.FNAME%> <%doctor.LNAME%></td>
                          <td><%=doctor.EMAIL%> </td>
                        </tr>
                      <% }) %>         
                    </tbody>
                  </table>
                </div>

              </div>
          </div>
      </div>
  </div>
</section>
<%- include('../partials/footer') %> 