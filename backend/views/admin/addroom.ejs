<%- include('../partials/admin/header') %>
     <!-- ADD NEW DOCTOR -->
    <section id="appointment" data-stellar-background-ratio="3">
          <div class="container">
               <div class="row">
                    <div class="col-md-12 col-sm-6">
                         <!--ADD NEW DOCTOR FORM-->
                         <form id="appointment-form" role="form" method="post" action="/admin/addroom">
                              <div class="section-title wow fadeInUp" data-wow-delay="0.4s">
                                   <h3>Add New Room</h3>
                              </div>

                              <div class="wow fadeInUp" data-wow-delay="0.8s">
                                   <h3>There are <%=TOTALROOMS%> rooms in the hospital.</h3>
                                   <br>
                                   <div class="col-md-6 col-sm-6">
                                        <label>Enter Room Number*</label>
                                        <input type="text" onkeypress="return event.charCode > 47 && event.charCode < 58;" pattern="[0-9]+" name="roomno" placeholder="Room number" class="form-control" required>
                                   </div>

                                   <div class="col-md-6 col-sm-6">
                                       <button type="submit" class="form-control" id="cf-submit">Submit Button</button>
                                   </div>
                              </div>
                        </form>
                        <div class="col-md-10 col-md-offset-1">
                              <div class="panel panel-default panel-table">
                                   <div class="panel-heading">
                                        <div class="row">
                                             <div class="col col-xs-6">
                                                  <h3 class="panel-title">All rooms</h3>
                                             </div>
                                        </div>
                                   </div>
          
                              <div class="panel-body">
                                   <table class="table table-striped table-bordered table-list">
                                        <thead>
                                             <tr>
                                                  <th><em class="fa fa-cog"></em></th>
                                                  <th>Room No</th>
                                                  <th>Available</th>
                                             </tr> 
                                        </thead>
                                        <tbody>
                                             <% rooms.forEach(room => {%>
                                             <tr>
                                                  <td align="center">
                                                       <a href="/admin/deleteroom/<%=room.ROOM_ID%>">
                                                            <button type="button" class="btn btn-danger">
                                                                 <em class="fa fa-trash"></em>
                                                            </button>
                                                       </a>
                                                  </td>
                                                  <td><%=room.ROOM_ID%></td>
                                                  <% if(room.ROOM_AVAILABLE){ %>
                                                       <td class="info">YES</td>
                                                  <%}else{%>
                                                       <td class="danger">NO</td>
                                                  <%}%>  
                                             </tr>
                                             <% }) %>         
                                        </tbody>
                                   </table>
                              </div>
          
                              </div>
                         </div>
                    </div>
               </div>
          </div>
     </section>
<%- include('../partials/footer') %>