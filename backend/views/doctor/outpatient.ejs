<%- include('../partials/doctor/header') %>
<div class="container">
    <div class="row">
        <div class="col-md-10 col-md-offset-1">
          <br>
            <div class="panel panel-default panel-table">
              <div class="panel-heading">
                <div class="row">
                  <div class="col col-xs-6">
                    <h4>Releasing Patient <u><%=row[0].Pname%></u></h4>
                    <input type="hidden" name="Pname" value="<%=row[0].Pname%>">
                  </div>
                </div>
              </div>

              <div class="panel-body">
                <table class="table table-striped table-bordered table-list">
                  <thead>
                    <tr>
                        <th>Patient Name</th>
                        <th>Department</th>
                        <th>Room #</th>
                        <th>Description</th>
                        <th>Time In</th>
                        <th>Fees(only consultation charges)</th>
                    </tr>
                  </thead>

                  <tbody>
                    <tr>
                        <td><%=row[0].Pname%></td>
                        <td><%=row[0].Department%></td>
                        <td><%=row[0].Room_id%></td>
                        <td><%=row[0].Descript%></td>
                        <td><%=row[0].TimeIn.toString().slice(0, 24) %></td>
                        <td><%=row[0].Fee%></td>
                    </tr>
                    </tbody>
                </table>
              </div>
            </div>
            <form id="appointment-form" role="form" method="post" action="/doctor/outpatient/<%=row[0].Appointment_id%>"> 
                <input type="hidden" name="_method" value="PUT">
                <label>Enter Total Fees:</label>
                <br>
                <input name="fees" class="col-md-3" value="0">
                <br> <br>
				<button type="submit" class="form-control btn btn-primary" id="cf-submit">Release Patient</button>
            </form>
        </div>
    </div>
</div>
<%- include('../partials/footer') %> 