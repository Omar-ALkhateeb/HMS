<%- include('../partials/doctor/header') %>
<div class="container">
    <div class="row">
        <div class="col-md-10 col-md-offset-1">
          <br>
            <div class="panel panel-default panel-table">
              <div class="panel-heading">
                <div class="row">
                  <div class="col col-xs-6">
                    <h2 class="panel-title">Inpatients:</h2>
                  </div>
                </div>
              </div>

              <div class="panel-body">
                <table class="table table-striped table-bordered table-list">
                  <thead>
                    <tr>
                        <th><em class="fa fa-cog"></em></th>
                        <th>#</th>
                        <th>Patient Name</th>
                        <th>Department</th>
                        <th>Room #</th>
                        <th>Description</th>
                        <th>Time In</th>
                    </tr>
                  </thead>

                  <tbody>
                        <% rows.forEach((row, i) => { %>
                          <tr>
                            <td align="center">
                                <button type="button" class="btn btn-default">
                                <a href="/doctor/outpatient/<%=row.Appointment_id%>">Outpatient</a>
                                </button>
                            </td> 
                            <td><%=i+1 %></td>
                            <td><%=row.Pname%></td>
                            <td><%=row.Department%></td>
                            <td><%=row.Room_id%></td>
                            <td><%=row.Descript%></td>
                            <td><%=row.TimeIn.toString().slice(0, 24) %></td>
                        <% }) %>
                  </tbody>
                </table>
              </div>
            </div>
        </div>
    </div>
</div>
<%- include('../partials/footer') %> 